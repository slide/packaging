<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
      <UI>
        <Dialog Id="JavaHomeDlg" Width="370" Height="270" Title="!(loc.JavaHomeDlgTitle)">
          <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
            <Publish Event="DoAction" Value="ValidateJavaHome" Order="1" />

            <!-- Spawn the error dialog if java.exe can't be found. -->
            <Publish Property="ERROR_TITLE" Value="!(loc.JavaHomeDlgErrorTitle)" Order="2" Condition="JAVA_EXE_FOUND = &quot;0&quot; OR (JAVA_EXE_VERSION &lt;&gt; &quot;17&quot; AND JAVA_EXE_VERSION &lt;&gt; &quot;21&quot;)" />
            <Publish Property="ERROR_MESSAGE" Value="!(loc.JavaHomeDlgErrorMessage)" Order="3" Condition="JAVA_EXE_FOUND = &quot;0&quot; OR (JAVA_EXE_VERSION &lt;&gt; &quot;17&quot; AND JAVA_EXE_VERSION &lt;&gt; &quot;21&quot;)" />
            <Publish Event="SpawnDialog" Value="GenericErrorDlg" Order="4" Condition="JAVA_EXE_FOUND = &quot;0&quot; OR (JAVA_EXE_VERSION &lt;&gt; &quot;17&quot; AND JAVA_EXE_VERSION &lt;&gt; &quot;21&quot;)" />
            <Publish Property="JAVA_HOME" Value="[JAVA_HOME]" />
          </Control>
          <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
          <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
            <Publish Event="SpawnDialog" Value="CancelDlg" />
          </Control>
          <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.JavaHomeDlgDescription)" />
          <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.JavaHomeDlgTitle)" />
          <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
          <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
          <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
          <Control Id="FolderLabel" Type="Text" X="20" Y="60" Width="290" Height="30" NoPrefix="yes" Text="!(loc.JavaHomeDlgLabel)" />
          <Control Id="Folder" Type="PathEdit" X="20" Y="100" Width="320" Height="18" Property="JAVA_HOME" />
          <Control Id="ChangeFolder" Type="PushButton" X="20" Y="120" Width="56" Height="17" Text="!(loc.JavaHomeDlgChange)">
            <Publish Property="_BrowseProperty" Value="JAVA_HOME" Order="1" />
            <Publish Event="SpawnDialog" Value="JavaBrowseDlg" Order="2" />
          </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>
